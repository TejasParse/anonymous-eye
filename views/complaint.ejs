<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Complaint</title>

    <%- include("partials/topImports")  %> 

</head>
<body class="bg-dark text-white">
    
    <%- include("partials/navbar")  %>
    <%- include("partials/successFlash")  %>
    <%- include("partials/failFlash")  %>

    <div class="container-md mb-4">

        <h1 class="mt-3">Form</h1>

        <form action="/complaint" method="post" novalidate class="needs-validation row" id="complaintForm">
    

            <div class="col-6">

                <h2>User Details (Not Required)</h2>

                <div class="mb-3">
                    <label for="userName" class="form-label">Name</label>
                    <input type="text" class="form-control" id="userName" name="userName">
                </div>
                <div class="mb-3">
                    <label for="userPhone" class="form-label">Phone Number</label>
                    <input type="tel" class="form-control" id="userPhone" name="userPhone">
                </div>
                <div class="mb-3">
                    <label for="userAddress" class="form-label">Address</label>
                    <textarea name="userAddress" id="userAddress" class="form-control"></textarea>
                </div>


            </div>

            <div class="col-6">

                <h2>Details about the suspect</h2>

                <div class="mb-3">
                    <label for="suspectName" class="form-label">Name</label>
                    <input type="text" class="form-control" id="suspectName" name="suspectName" required>
                    <div class="invalid-feedback">
                        Please Enter "Unknown" if name not known
                    </div>
                </div>
                <div class="mb-3">
                    <label for="suspectPhone" class="form-label">Phone</label>
                    <input type="tel" class="form-control" id="suspectPhone" name="suspectPhone" required>
                    <div class="invalid-feedback">
                        Please Enter "100" if phone not known
                    </div>
                </div>
                <div class="mb-3">
                    <label for="suspectAddress" class="form-label">Address</label>
                    <textarea name="suspectAddress" id="suspectAddress" class="form-control" required></textarea>
                    <div class="invalid-feedback">
                        Please Enter "Unknown" if address not known
                    </div>
                </div>
                
            </div>

            <div class="col-12">
                <div class="input-group mb-3">
                    <label class="input-group-text" for="inputGroupFile01">Upload Image of suspect if any</label>
                    <input type="file" class="form-control" id="inputGroupFile01" name="suspectImage">
                </div>

                <h2 class="text-center">Details about the crime</h2>

                <div class="mb-3">
                    <label for="crimeDescription" class="form-label">Describe the crime</label>
                    <textarea name="crimeDescription" id="crimeDescription" class="form-control" required></textarea>
                    <div class="invalid-feedback">
                        Please Enter the details about the crime
                    </div>
                </div>

                <div class="mb-3">
                    <label for="crimeAddress" class="form-label">Location of the Crime</label>
                    <textarea name="crimeAddress" id="crimeAddress" class="form-control" required></textarea>
                    <div class="invalid-feedback">
                        Please Enter the details about the crime
                    </div>
                </div>

                <div class="mb-3">
                    <label for="crimeCity" class="form-label">City/Town/Village</label>
                    <input type="text" name="crimeCity" id="crimeCity" class="form-control" required>
                    <div class="invalid-feedback">
                        Please Enter the details about the crime
                    </div>
                </div>

                <div class="mb-3">
                    <label for="crimeState" class="form-label">State</label>
                    <select class="form-select" aria-label="Default select example" name="crimeState" id="crimeState" required>
                        <option selected disabled value="">Select The State of Crime</option>
                        <% states.forEach(element => { %>
                            <option value="<%= element %>"> <%= element %> </option>
                        <% }) %>
                        
                    </select>
                    <div class="invalid-feedback">
                        Please select a valid state.
                    </div>

                </div>

                <div class="mb-3">
                    <label for="crimeDate" class="form-label">Date of the crime</label>
                    <div class="input-group date" id="datepicker">
                        <input type="date" class="form-control" id="crimeDate" name="crimeDate"/>
                    </div>
                </div>
                <div class="g-recaptcha mb-3" data-sitekey="6LeIxAcTAAAAAJcZVRqyHh71UMIEGNQ_MXjiZKhI" data-theme="dark"></div>


            </div>
            
            <div class="col-12">
                <button class="btn btn-primary" type="submit">Submit form</button>
            </div>
        </form>

    </div>

    

    <%- include("partials/bottomImports")  %>


</body>
</html>